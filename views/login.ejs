<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DocPortal Authentication</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Form Container Transition */
        .form-container {
            transition: all 0.4s ease-in-out;
            opacity: 0;
            transform: translateY(20px);
            display: none;
        }

        .form-container.active {
            opacity: 1;
            transform: translateY(0);
            display: block;
        }

        /* Tab Button Styles */
        .tab-button {
            transition: all 0.3s ease;
            position: relative;
        }

        .tab-button::after {
            content: "";
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: #571d1d;
            transition: width 0.3s ease;
        }

        .tab-button.active::after {
            width: 100%;
        }

        /* Input Field Focus Effect */
        .input-field {
            transition: all 0.3s ease;
        }

        .input-field:focus {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        /* Submit Button Hover Effect */
        .submit-button {
            transition: all 0.3s ease;
            background-color: #571d1d;
            border-color: #571d1d;
        }

        .submit-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            background-color: #de3f3f;
            border-color: #e73e3e;
        }

        /* Responsive Design for Small Screens */
        @media (max-width: 768px) {
            .auth-container {
                flex-direction: column-reverse;
            }

            .form-section,
            .decoration-section {
                width: 100% !important;
            }

            .decoration-section {
                padding: 2rem !important;
            }
        }
    </style>
</head>

<body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl flex max-w-4xl w-full overflow-hidden auth-container">
            <!-- Forms Section -->
            <div class="w-1/2 p-12 form-section">
                <div class="flex space-x-6 mb-8">
                    <button onclick="switchForm('login')"
                        class="tab-button active text-xl font-semibold text-gray-700 pb-2">
                        Login
                    </button>
                    <button onclick="switchForm('signup')" class="tab-button text-xl font-semibold text-gray-700 pb-2">
                        Sign Up
                    </button>
                </div>

                <!-- Login Form -->
                <div id="loginForm" class="form-container active space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <button
                        class="submit-button w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white">
                        Login
                    </button>

                    <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-white text-gray-500">Do not have an account? <a href="#" onclick="switchForm('signup')"><u>Sign up</u></a> instead!</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sign Up Form -->
                <div id="signupForm" class="form-container space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Doctor's Name</label>
                        <input type="text"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Speciality</label>
                        <select
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500">
                            <option>Select Speciality</option>
                            <option>Cardiology</option>
                            <option>Dermatology</option>
                            <option>Neurology</option>
                            <option>Pediatrics</option>
                            <option>Orthopedics</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Phone Number</label>
                        <input type="tel"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Re-enter Password</label>
                        <input type="password"
                            class="input-field mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-orange-500 focus:border-orange-500" />
                    </div>

                    <button
                        class="submit-button w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white">
                        Create Account
                    </button>
                </div>
            </div>

            <!-- Decorative Side -->
            <div class="w-1/2 p-12 flex items-center decoration-section" style="background: #571d1d;">
                <div class="max-w-md text-white" id="decorativeText">
                    <svg class="h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    <h3 class="text-4xl font-bold mb-1" id="decorativeTitle">
                        Welcome Back
                    </h3>
                    <p class="text-lg" id="decorativeSubtitle">
                        Trusted by <i>Government of India</i>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function switchForm(formType) {
            const loginForm = document.getElementById("loginForm");
            const signupForm = document.getElementById("signupForm");
            const loginTab = document.querySelector(
                "button[onclick=\"switchForm('login')\"]"
            );
            const signupTab = document.querySelector(
                "button[onclick=\"switchForm('signup')\"]"
            );
            const decorativeTitle = document.getElementById("decorativeTitle");
            const decorativeSubtitle =
                document.getElementById("decorativeSubtitle");

            if (formType === "login") {
                loginForm.classList.add("active");
                signupForm.classList.remove("active");
                loginTab.classList.add("active");
                signupTab.classList.remove("active");

                // Change the decoration content for Login
                decorativeTitle.innerText = "Welcome Back";
                decorativeSubtitle.innerHTML =
                    "Trusted by <i>Government of India</i>";
            } else {
                signupForm.classList.add("active");
                loginForm.classList.remove("active");
                signupTab.classList.add("active");
                loginTab.classList.remove("active");

                // Change the decoration content for Sign Up
                decorativeTitle.innerText = "Onboarding";
                decorativeSubtitle.innerText =
                    "You are just a few steps away from being a super doctor!";
            }
        }
    </script>
</body>

</html>